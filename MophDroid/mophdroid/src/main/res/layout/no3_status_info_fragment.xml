<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no3.StatusInfoFragment">

    <TextView
        android:id="@+id/txtLogOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/gridPushButtons"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:textColor="@color/colorTextStatus"/>

    <GridLayout
        android:id="@+id/gridPushButtons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/gridPositions"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_marginBottom="29dp">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="Clear" />

        <Button
            android:id="@+id/btnSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="Sync" />

        <Button
            android:id="@+id/btnFreeMem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="Free Memory" />

        <TextView
            android:id="@+id/txtSynced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textColor="@color/colorTextStatus"
            android:text="Not Synced" />

        <TextView
            android:id="@+id/txtFreeMem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textColor="@color/colorTextStatus"
            android:text="0" />

    </GridLayout>

    <GridLayout
        android:id="@+id/gridPositions"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:columnCount="5"
        android:rowCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center"
            android:text="Gating"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="Lng" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:layout_column="2"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="Rtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:layout_column="3"
            android:layout_gravity="center"
            android:text="Lng" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:layout_column="4"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:text="Rtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_columnWeight=".8"
            android:layout_gravity="center"
            android:text="Upper"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUpperLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="UpLng"
            android:textColor="@color/colorTextStatus" />

        <TextView
            android:id="@+id/txtUpperRtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:text="UpRtn"
            android:textColor="@color/colorTextStatus" />

        <TextView
            android:id="@+id/txtGatingLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center"
            android:text="GaLng"
            android:textColor="@color/colorTextStatus" />

        <TextView
            android:id="@+id/txtGatingRtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:text="GaRtn"
            android:textColor="@color/colorTextStatus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="Lower"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLowerLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="LoLng"
            android:textColor="@color/colorTextStatus" />

        <TextView
            android:id="@+id/txtLowerRtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:text="LoRtn"
            android:textColor="@color/colorTextStatus" />

    </GridLayout>

</RelativeLayout>